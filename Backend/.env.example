# Server
PORT=3000
NODE_ENV=development
ENCRYPTION_KEY=supersecretkeythatis32byteslong123 # Must be 32 chars

# Database
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=antigravity
DB_HOST=localhost
DB_PORT=5432
DATABASE_URL=postgres://postgres:postgres@localhost:5432/antigravity

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379

# Auth
JWT_SECRET=supersecretjwtsecret
ACCESS_TOKEN_EXPIRES_IN=15m
REFRESH_TOKEN_EXPIRES_IN=7d

# Cloudinary
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:3000/auth/google/callback
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
GITHUB_REDIRECT_URI=http://localhost:3000/auth/github/callback

# Frontend URL (for redirects and emails)
FRONTEND_URL=http://localhost:5173

# Upstash Redis (for caching)
UPSTASH_REDIS_REST_URL=your_upstash_url
UPSTASH_REDIS_REST_TOKEN=your_upstash_token

# Email (Nodemailer)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
EMAIL_FROM=noreply@syncflow.com

# Cron Jobs
CRON_API_KEY=your_secure_cron_api_key
